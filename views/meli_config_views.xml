<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_meli_config_settings_form" model="ir.ui.view">
            <field name="name">meli.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="arch" type="xml">
                <form classform="oe_form_configuration">
                    <header>
                        <button string="Guardar" type="object" name="execute" class="btn-primary" />
                        <button string="Descartar" type="object" name="cancel" class="btn-secondary" />
                    </header>
                    <div class="o_setting_container">
                        <div class="app_settings_holder">
                            <div class="o_setting_box" id="meli_integration_settings">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Credenciales de API</span>
                                    <div class="text-muted">
                                        Ingresa el App ID y Client Secret de tu app de MELI.
                                    </div>
                                    <div class="content-group mt16">
                                        <div class="row">
                                            <label for="meli_app_id" class="col-lg-3 o_light_label" />
                                            <field name="meli_app_id" />
                                        </div>
                                        <div class="row mt8">
                                            <label for="meli_client_secret"
                                                class="col-lg-3 o_light_label" />
                                            <field name="meli_client_secret" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_meli_config_settings" model="ir.actions.act_window">
            <field name="name">Mercado Libre - Configuraci√≥n</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="view_id" ref="view_meli_config_settings_form" />
        </record>

        <menuitem id="menu_meli_config"
            name="Mercado Libre"
            parent="base.menu_config" sequence="100"
            action="action_meli_config_settings"
        />

    </data>
</odoo>